{
	"name": "@sap/cf-tools",
	"displayName": "cf-tools",
	"version": "2.1.1",
	"description": "Cloud Foundry API tools",
	"bugs": {
		"url": "https://github.com/sap-staging/cloud-foundry-tools-api.git/issues"
	},
	"repository": {
		"url": "https://github.com/sap/cloud-foundry-tools-api.git"
	},
	"license": "Apache-2.0",
	"author": "SAP SE",
	"publisher": "SAP",
	"main": "./out/src/index.js",
	"types": "out/src/index.d.ts",
	"files": [
		"out/src/*.js",
		"out/src/*.ts"
	],
	"scripts": {
		"build": "npm-run-all test docs",
		"compile": "tsc -p ./",
		"docs": "shx rm -rf docs/ && typedoc src/index.ts --tsconfig tsconfig.json --out docs/ --name \"Cloud Foundry Tools API\" --excludePrivate --excludeInternal",
		"lint": "eslint . --ext .ts,.tsx --cache",
		"prepare": "husky install",
		"pretest": "npm-run-all compile lint",
		"release": "standard-version",
		"test": "nyc mocha -p tsconfig.json --config ./.mocharc.yaml --no-parallel"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"dependencies": {
		"comment-json": "4.1.0",
		"lodash": "4.17.21",
		"properties-reader": "2.2.0",
		"url": "0.11.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@types/chai": "^4.2.22",
		"@types/comment-json": "2.4.2",
		"@types/lodash": "^4.14.123",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.14.10",
		"@types/properties-reader": "2.1.0",
		"@types/sinon": "^10.0.2",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"chai": "^4.3.4",
		"coveralls": "^3.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.4.0",
		"eslint-config-prettier": "^8.1.0",
		"husky": "^7.0.4",
		"mocha": "^8.2.1",
		"npm-run-all": "4.1.3",
		"nyc": "^15.1.0",
		"prettier": "^2.4.1",
		"shx": "0.3.3",
		"sinon": "^12.0.1",
		"standard-version": "^9.3.2",
		"ts-node": "^10.0.0",
		"typedoc": "0.22.10",
		"typescript": "^4.3.4"
	}
}
